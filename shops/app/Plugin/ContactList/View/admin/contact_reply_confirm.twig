{% extends 'default_frame.twig' %}

{% set menus = ['admin_contacts', 'admin_contacts_edit'] %}

{% block title %}問い合わせ管理{% endblock %}
{% block sub_title %}問い合わせ返信{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block javascript %}
    <script>
        $(function() {
        });
    </script>
{% endblock javascript %}

{% block main %}
    <div id="confirm_wrap" class="row">
        <div id="confirm_box" class="col-md-12">
            <form id="contact-reply-confirm-form" class="form-horizontal" method="post">
                {{ form_widget(form._token) }}
                <div id="confirm_box__body" class="box">
                    <div id="confirm_box__body_inner" class="box-body">
                        <div id="confirm_box__subject" class="form-group">
                            {{ form_label(form.subject) }}
                            <div class="col-sm-9 col-lg-10 padT07">
                                {{ data.subject }}
                                <input type="hidden" id="contact_reply_subject" name="contact_reply[subject]" class="form-control" value="{{ data.subject }}" />
                            </div>
                        </div>
                        <div id="confirm_box__contents" class="form-group">
                            {{ form_label(form.contents) }}
                            <div class="col-sm-9 col-lg-10 padT07">
                                {{ data.contents|nl2br }}
                                <input type="hidden" id="contact_reply_contents" name="contact_reply[contents]" class="form-control" value="{{ data.contents }}" />
                            </div>
                        </div>
                        <div id="confirm_box__contents" class="form-group">
                            {{ form_label(form.memo) }}
                            <div class="col-sm-9 col-lg-10 padT07">
                                {{ data.memo|nl2br }}
                                <input type="hidden" id="contact_reply_memo" name="contact_reply[memo]" class="form-control" value="{{ data.memo }}" />
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
                <div id="box_main__footer" class="row">
                    <div id="confirm_box__button_menu" class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
                        <p><button type="submit" class="btn btn-info btn-lg" name="mode" value="back">戻る</button></p>
                        <p><button type="submit" class="btn btn-primary btn-lg" name="mode" value="complete">メール送信</button></p>
                    </div>
                </div>
            </form>

        </div><!-- /.col -->
    </div>

{% endblock %}
