{% extends 'default_frame.twig' %}

{% block javascript %}
    <script type="text/javascript">

    </script>
{% endblock %}

{% block title %}{{ tpl_subtitle }}{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}
{% block main %}

    <div>

    <div class="row" id="aside_wrap">
        <form name="form1" role="form" novalidate class="form-horizontal" id="point_form" method="post" action="">
            {{ form_widget(form._token) }}
            <div class="col-md-9">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">設定</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">Project ID<span
                                        class="text-danger"> *</span></label>

                            <div class="col-sm-10 {% if form.project_id.vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form.project_id) }}
                                {{ form_errors(form.project_id) }}
                                <p class='small'>*project id を設定ください</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">API Key<span
                                        class="text-danger"> *</span></label>

                            <div class="col-sm-10 {% if form.api_key.vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form.api_key) }}
                                {{ form_errors(form.api_key) }}
                                <p class='small'>*API Key を設定ください</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label required ">入荷通知受付<span class="text-danger"> *</span></label>

                            <div class="col-sm-10 {% if form.product_flg.vars.errors is not empty %}has-error{% endif %}">
                                {{ form_widget(form.product_flg) }}
                                {{ form_errors(form.product_flg) }}
                                <p class='small'>*有効にすると商品詳細画面にて入荷通知の受付を行います</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box -->

            </div>
            <div class="col-md-3" id="aside_column">
                <div class="col_inner">
                    <div class="box no-header">
                        <div class="box-body">
                            <div class="row text-center">
                                <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                    <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">
                                        この内容で登録する
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            <!-- /.col -->
        </form>
    </div>


{% endblock %}
